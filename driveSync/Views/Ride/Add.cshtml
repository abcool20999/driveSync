@{
    ViewBag.Title = "AddTrip";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .login-container {
        max-width: 300px;
        margin-left: -7px;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
    }

    h2 {
        text-align: left;
        margin-left: -7px
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #000f;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

        input[type="submit"]:hover {
            background-color: dimgrey;
        }
</style>

<h2>New Trip</h2>
<!-- Trip Information-->
<form action="/Ride/AddRide" method="POST">
    <div>
        <label>DriverId:</label><input type="text" name="DriverId" />
    </div>

    <div>
        <label>startLocation:</label><input type="text" name="startLocation" />
    </div>
    <div>
        <label>endLocation:</label><input type="text" name="endLocation" />
    </div>
    <div>
        <label>price:</label><input type="text" name="price" />
    </div>
    <div>
        <label>Time:</label><input type="text" name="Time" />
    </div>
    <div>
        <label>dayOftheweek:</label><input type="text" name="dayOftheweek" />
    </div>
    <div>
        <label>ItemName:</label><input type="text" name="ItemName" />
    </div>
    <div>
        <label>Quantity:</label><input type="text" name="Quantity" />
    </div>
    <div>
        <label>Weight:</label><input type="text" name="Weight" />
    </div>
    <div>
        <label>Size:</label><input type="text" name="Size" />
    </div>
    <div>
        <input type="submit" value="Add Trip" />
    </div>
</form>

 
